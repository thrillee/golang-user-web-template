{{ define "content" }}
<td style="padding: 0 35px">
  <h1 class="h1">{{.MainAction}}</h1>
  <p class="p2">{{.Greeting}},</p>
  <span class="s1"></span>
  <p class="p1">
    Your One-Time Password (OTP) for {{.APP_NAME}} is:
    <br /><strong>{{.OTP}}</strong>.
  </p>
  <span class="s1"></span>
  <p class="p1">
    Please enter this code in the app to proceed with your verification. This
    OTP is valid for {{.EXPIRATION}} and can only be used once.
  </p>
  <span class="s1"></span>
  <p class="p3">
    If you did not request this service, please contact our support team
    immediately at {{.SUPPORT_PHONE}} or {{.SUPPORT_EMAIL}}.
  </p>
</td>

{{ end }}
